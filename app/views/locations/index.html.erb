<h1>Locations</h1>

<%= form_with url: locations_path, method: :get do |form| %>
  <%=form.text_field :place, value: params[:place]%>
  <%=form.select :distance, [1,5,10,50,100,200,300]%>
  <%=form.submit %>
  <% end %>

<div id="locations">
  <% @locations.each do |location| %>
    <%= render location %>
    <p>
      <%= link_to "Show this listing", location %>
    </p>
  <% end %>
</div>

